<%- unless groups.empty? -%>
  <h2><%= title %></h2>
  <ul class="grid contacts small">
    <%- groups.each do |group| -%>
      <li class="vcard">
        <%= group_image_link(group, :image_options => { :class => "photo fn" },
                                :link_options =>  { :class => "url" }) %>
      </li>
    <%- end -%>
  </ul>
<%- end -%>
