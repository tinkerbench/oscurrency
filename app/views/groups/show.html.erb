<%= render :partial => 'shared/jscript', :locals => { :jscript_file_name => 'group' } %>
  <%= tabs_for do |tab| %>
    <% tab.create('tab_home', t('groups.show.home')) do %>
      <div id="home_canvas">
        <%= render :partial => 'home_canvas' %>
      </div>
      <div id="empty_canvas" style='clear:both;'></div>
    <% end %>
    <% tab.create('tab_exchanges', t('groups.show.exchanges')) do %>
      <div id="exchanges_canvas">
        <%= render :partial => 'exchanges_canvas' %>
      </div>
    <% end if (@group.adhoc_currency? && !@group.private_txns?) %>
    <% tab.create('tab_forum', t('groups.show.forum')) do %>
      <div id="forum_canvas">
        <%= render :partial => '/forums/forum_canvas' %>
      </div>
      <%= render :partial => 'forum_form' %>
    <% end %>
    <% tab.create('tab_requests', t('groups.show.requests')) do %>
      <div id="reqs_canvas">
        <%= render :partial => '/reqs/reqs_canvas' %>
      </div>
    <% end if @group.adhoc_currency? %>
    <% tab.create('tab_offers', t('groups.show.offers')) do %>
      <div id="offers_canvas">
        <%= render :partial => '/offers/offers_canvas' %>
      </div>
    <% end if @group.adhoc_currency? %>
    <% tab.create('tab_people', t('groups.show.people')) do %>
      <div id="people_canvas">
        <%= render :partial => '/memberships/members_canvas' %>
      </div>
    <% end %>
  <% end %>
  
